{
  "name": "reviews-api",
  "version": "1.0.0",
  "description": "A lightweight API for managing reviews with analytics features.",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "express-async-handler": "^1.2.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "reviews",
    "api",
    "express",
    "postgresql"
  ],
  "author": "Fabio Andres Hurtado Cardona github.com/FabiusC",
  "license": "ISC",
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testTimeout": 10000,
    "clearMocks": true,
    "verbose": true,
    "injectGlobals": true
  }
}