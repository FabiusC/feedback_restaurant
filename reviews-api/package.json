{
    "name": "feedback-restaurant-api",
    "version": "1.0.0",
    "description": "API para sistema de feedback de restaurante",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:integration": "jest --testPathPattern=integration",
        "test:unit": "jest --testPathPattern=services --testPathPattern=entities --testPathPattern=dto --testPathPattern=controllers --testPathIgnorePatterns=integration",
        "test:services": "jest --testPathPattern=services",
        "test:entities": "jest --testPathPattern=entities",
        "test:dto": "jest --testPathPattern=dto",
        "test:controllers": "jest --testPathPattern=controllers",
        "test:repositories": "jest --testPathPattern=repositories",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "seed": "ts-node src/scripts/seedData.ts"
    },
    "keywords": [
        "api",
        "feedback",
        "restaurant",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.11.3"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.10.0",
        "@types/pg": "^8.10.9",
        "@types/supertest": "^2.0.16",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.54.0",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.2"
    }
}
